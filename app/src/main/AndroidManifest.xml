<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="capstone.my.annin.londontubeschedule">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".timberlog.MyApplication"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/UNIFIED_GOOGLEMAPS_API_KEY"/>

        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="capstone.my.annin.londontubeschedule.ui.StationListActivity"
            android:label="@string/station_list"
            android:parentActivityName="capstone.my.annin.londontubeschedule.ui.MainActivity"
            android:launchMode="singleTop" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="capstone.my.annin.londontubeschedule.ui.MainActivity" />
    </activity>
        <activity
            android:name="capstone.my.annin.londontubeschedule.ui.StationScheduleActivity"
            android:label="@string/station_schedule"
            android:parentActivityName="capstone.my.annin.londontubeschedule.ui.StationListActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.my.annin.londontubeschedule.ui.StationListActivity" />
        </activity>

        <activity
            android:name="capstone.my.annin.londontubeschedule.maps.StationMapActivity"
            android:label="@string/station_map"
            android:parentActivityName="capstone.my.annin.londontubeschedule.ui.StationScheduleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.my.annin.londontubeschedule.ui.StationScheduleActivity" />
        </activity>

        <activity
            android:name="capstone.my.annin.londontubeschedule.settings.SettingsActivity"
            android:label="@string/settings_label_manifest"
            android:parentActivityName="capstone.my.annin.londontubeschedule.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.my.annin.londontubeschedule.ui.MainActivity" />
        </activity>

        <activity
            android:name="capstone.my.annin.londontubeschedule.settings.PrivacyPolicyActivity"
            android:label="@string/privacy_policy_label_manifest"
            android:parentActivityName="capstone.my.annin.londontubeschedule.settings.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.my.annin.londontubeschedule.settings.SettingsActivity" />
        </activity>

        <activity
            android:name="capstone.my.annin.londontubeschedule.settings.OpenSourceLicensesActivity"
            android:label="Open Source Licenses"
            android:parentActivityName="capstone.my.annin.londontubeschedule.settings.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.my.annin.londontubeschedule.settings.SettingsActivity" />
        </activity>

    <receiver android:name=".widget.ScheduleWidgetProvider">

        <intent-filter>
            <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent-filter>

        <meta-data
            android:name="android.appwidget.provider"
            android:resource="@xml/schedule_widget_provider_info" />
    </receiver>
    <service android:name=".widget.ScheduleWidgetService"
        android:permission="android.permission.BIND_REMOTEVIEWS" />


</application>

</manifest>