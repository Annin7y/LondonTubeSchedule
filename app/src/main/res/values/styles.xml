<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Line List Theme -->
    <style name="LineStationListStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Line Station Theme -->
    <style name="LineStationStatusStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Line List Theme -->
    <style name="LineStationStatusReasonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Line Name Station List Theme -->
    <style name="LineNameStationListStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">35sp</item>
    </style>

    <!-- Main Activity Instructions Theme -->
    <style name="MainInstructionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Station Activity Instructions Theme -->
    <style name="StationInstructionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Station Activity Instructions Tablet Theme -->
    <style name="StationInstructionTabletStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Station Activity Instructions Tablet Theme -->
    <style name="StationInstructionDuplicateTabletStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Schedule Label Theme -->
    <style name="ScheduleLabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Schedule Station Name Theme -->
    <style name="ScheduleNameStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Schedule Widget Label Theme -->
    <style name="ScheduleWidgetLabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Schedule Widget Name Theme -->
    <style name="ScheduleWidgetNameStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Schedule Widget List Theme -->
    <style name="ScheduleWidgetListStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#09C</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
