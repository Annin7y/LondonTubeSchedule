<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true" >

    <TextView
        android:id="@+id/line_name_station"
        style="@style/LineStationListStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/station_list_instructions"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        tools:text="@string/station_name"
        />

    <TextView
        android:id="@+id/station_list_instructions"
        style="@style/StationInstructionStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_name_station"
        app:layout_constraintBottom_toTopOf="@id/station_duplicate_instructions"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/station_list_instructions" />

    <TextView
        android:id="@+id/station_duplicate_instructions"
        style="@style/StationInstructionStyle"
        android:layout_marginStart="@dimen/station_dup_instructions_start"
        android:layout_marginTop="@dimen/station_dup_instructions_top"
        app:layout_constraintBottom_toTopOf="@id/station_duplicate_instructions_two"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/station_list_instructions"
        android:text="@string/station_dup_instructions" />

    <TextView
        android:id="@+id/station_duplicate_instructions_two"
        style="@style/StationInstructionStyle"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="@dimen/station_dup_instructions_end"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_station"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/station_duplicate_instructions"
        android:text="@string/station_dup_instructions_two"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/station_duplicate_instructions"
        app:layout_constraintBottom_toTopOf="@id/favorites_button"
        android:layout_marginTop="20dp"
        android:descendantFocusability="afterDescendants"
        />

    <Button
        android:id="@+id/favorites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_station"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusable="false"
        android:text="@string/add_to_favourites" />

</android.support.constraint.ConstraintLayout>
</ScrollView>















