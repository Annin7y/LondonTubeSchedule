<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/line_list">

    <TextView
        android:id="@+id/line_name"
        style="@style/LineStationListStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/line_list_padding"
        tools:text="@string/line_name" />

    <TextView
        android:id="@+id/line_status_name"
        style="@style/LineStationListStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/line_list_padding"
        tools:text="@string/line_status_text" />

    <TextView
        android:id="@+id/line_status_reason_name"
        style="@style/LineStationListStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/line_list_padding"
        tools:text="@string/line_reason_text" />

</LinearLayout>