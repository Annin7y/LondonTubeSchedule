<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/schedule_list">

    <TextView
        android:id="@+id/schedule_station_name"
        style="@style/ScheduleListStyle"
        android:layout_marginLeft="@dimen/line_station_margin_start"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginRight="@dimen/line_station_margin_end"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="2dp"
        tools:text="@string/station_name"
        />

    <TextView
        android:id="@+id/schedule_destination_name"
        style="@style/ScheduleListStyle"
        android:layout_marginLeft="@dimen/line_station_margin_start"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginRight="@dimen/line_station_margin_end"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="2dp"
        tools:text="Brixton Underground Station"
      />

    <TextView
        android:id="@+id/schedule_current_location"
        style="@style/ScheduleListStyle"
        android:layout_marginLeft="@dimen/line_station_margin_start"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginRight="@dimen/line_station_margin_end"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="2dp"
        tools:text="Between Highbury and Islington and Kings Cross St. P" />

    <TextView
        android:id="@+id/schedule_towards"
        style="@style/ScheduleListStyle"
        android:layout_marginLeft="@dimen/line_station_margin_start"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginRight="@dimen/line_station_margin_end"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="2dp"
        tools:text="Brixton" />

    <TextView
        android:id="@+id/schedule_arrival"
        style="@style/ScheduleListStyle"
        android:layout_marginLeft="@dimen/line_station_margin_start"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginRight="@dimen/line_station_margin_end"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="2dp"
        tools:text="5:45 p.m. Jan 2, 2018" />


</LinearLayout>