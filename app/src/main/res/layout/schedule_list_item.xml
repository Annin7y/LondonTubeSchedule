<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/schedule_list">

    <TextView
        android:id="@+id/schedule_name_label"
        style="@style/ScheduleLabelStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:text="@string/name_label"
        />

    <TextView
        android:id="@+id/schedule_station_name"
        style="@style/ScheduleNameStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/sch_text_padding"
        tools:text="@string/station_name"
        />

    <TextView
        android:id="@+id/schedule_arrival_label"
        style="@style/ScheduleLabelStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:layout_marginTop="@dimen/sch_label_top_padding"
        android:text="@string/arrival_label"/>

    <TextView
        android:id="@+id/schedule_arrival"
        style="@style/ScheduleNameStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/sch_text_padding"
        tools:text="@string/arrival_text" />

    <TextView
        android:id="@+id/schedule_destination_label"
        style="@style/ScheduleLabelStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:layout_marginTop="@dimen/sch_label_top_padding"
        android:text="@string/destination_label"
        />

    <TextView
        android:id="@+id/schedule_destination_name"
        style="@style/ScheduleNameStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/sch_text_padding"
        tools:text="@string/destination_text"
      />

    <TextView
        android:id="@+id/schedule_location_label"
        style="@style/ScheduleLabelStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:layout_marginTop="@dimen/sch_label_top_padding"
        android:text="@string/location_label"
        />

    <TextView
        android:id="@+id/schedule_current_location"
        style="@style/ScheduleNameStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/sch_text_padding"
        tools:text="@string/location_text" />

    <TextView
        android:id="@+id/schedule_towards_label"
        style="@style/ScheduleLabelStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:layout_marginTop="@dimen/sch_label_top_padding"
        android:text="@string/towards_label"/>

    <TextView
        android:id="@+id/schedule_towards"
        style="@style/ScheduleNameStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/sch_text_padding"
        tools:text="@string/towards_text" />

    <TextView
        android:id="@+id/empty_towards"
        style="@style/ScheduleNameStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/sch_text_padding"
        android:visibility="gone"
        android:text = "@string/empty_view_text" />

    <TextView
        android:id="@+id/lat_location_schedule"
        style="@style/LineStationListStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/station_list_padding"
        tools:text="51.9999" />

    <TextView
        android:id="@+id/lon_location_schedule"
        style="@style/LineStationListStyle"
        android:layout_marginStart="@dimen/line_station_margin_start"
        android:layout_marginEnd="@dimen/line_station_margin_end"
        android:padding="@dimen/station_list_padding"
        tools:text="-5.999" />




</LinearLayout>