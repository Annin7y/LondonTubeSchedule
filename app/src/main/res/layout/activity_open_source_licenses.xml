<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yydcdut.markdown.MarkdownTextView
        android:id="@+id/open_licenses_txt_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/main_recycler_start"
        android:layout_marginEnd="@dimen/station_dup_instructions_end"
        android:layout_marginTop="@dimen/main_recycler_top"
        android:textSize="@dimen/station_instr_text_size"
        android:text="@string/open_source_licenses"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>